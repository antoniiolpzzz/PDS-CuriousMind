<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.Priority?>

<?import javafx.scene.layout.StackPane?>
<HBox xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.pds.curiousmind.login.LoginController"
      style="-fx-pref-width: 100%; -fx-pref-height: 100%;">

    <!-- Parte izquierda (2/3 del ancho) -->
    <VBox alignment="CENTER" spacing="20.0" style="-fx-background-color: black; -fx-padding: 20;" HBox.hgrow="ALWAYS">
        <Label text="CURIOUS MINDS" style="-fx-text-fill: white; -fx-font-size: 18px; -fx-font-weight: bold;"/>
        <Pane VBox.vgrow="ALWAYS"/>
        <Label text="WELCOME BACK" style="-fx-text-fill: white; -fx-font-size: 14px;"/>
    </VBox>

    <!-- Parte derecha (1/3 del ancho) -->
    <VBox alignment="CENTER" spacing="10.0" style="-fx-background-color: white; -fx-padding: 20;" HBox.hgrow="SOMETIMES">
        <!-- Teléfono o email -->
        <Label text="Teléfono o email" style="-fx-font-size: 18px;"/>
        <TextField fx:id="txtTelefonoEmail" promptText="Introduce tu teléfono o email..." maxWidth="Infinity"/>

        <!-- Contraseña -->
        <Label text="Contraseña" style="-fx-font-size: 18px;"/>
        <HBox spacing="5.0">
            <StackPane>
                <!-- PasswordField (campo oculto) -->
                <PasswordField fx:id="passwordField" promptText="Introduce tu contraseña..." visible="true" />

                <!-- TextField (campo visible) -->
                <TextField fx:id="passwordTextField" promptText="Introduce tu contraseña..." visible="false" />
            </StackPane>

            <Button fx:id="togglePassword" text="👁" onAction="#onTogglePasswordClick" />


        </HBox>

        <Button text="Login" onAction="#onLoginButtonClick" maxWidth="Infinity"/>
        <Button text="Signup" onAction="#onSignupButtonClick" maxWidth="Infinity"/>
    </VBox>

</HBox>
